<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1916"
    tools:context=".ForgetPassFragment">

    <EditText
        android:id="@+id/forger_email_input"
        android:layout_width="291dp"
        android:layout_height="0dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="13dp"
        android:backgroundTint="#FF5722"
        android:ems="10"
        android:hint="Enter your Email"
        android:inputType="textEmailAddress"
        android:textColor="#FF9800"
        android:textColorHint="#FF9800"
        app:layout_constraintBottom_toBottomOf="@+id/forget_email_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/forget_email_text"
        android:layout_width="153dp"
        android:layout_height="58dp"
        android:layout_marginStart="32dp"
        android:text="Sign In"
        android:textColor="#FF9800"
        android:textColorHint="#FF9800"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>