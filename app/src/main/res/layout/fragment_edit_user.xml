<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edituser_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1916"
    android:backgroundTint="#1B1916"
    tools:context=".EditUserFragment">

    <ImageView
        android:id="@+id/edituser_back_btn"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintEnd_toStartOf="@+id/gamedetails_logo_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edituser_phonenumber_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#FF5722"
        android:ems="10"
        android:hint="Edit phone number"
        android:inputType="text|phone"
        android:shadowColor="@color/black"
        android:textColor="#FF9800"
        android:textColorHint="#FF9800"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edituser_lname_input" />

    <ImageView
        android:id="@+id/edituser_image"
        android:layout_width="161dp"
        android:layout_height="95dp"
        android:rotation="19"
        android:src="@drawable/gamechangersimple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edituser_fname_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#FF5722"
        android:digits="abcdefghijklmnopqrstuvwxyz -ABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:ems="10"
        android:hint="Edit First Name"
        android:inputType="textPersonName"
        android:shadowColor="@color/black"
        android:textColor="#FF9800"
        android:textColorHint="#FF9800"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edituser_image" />

    <Button
        android:id="@+id/edituser_save_btn"
        android:layout_width="191dp"
        android:layout_height="51dp"
        android:layout_marginTop="184dp"
        android:backgroundTint="#FF5722"
        android:shadowColor="#FFFFFF"
        android:text="Save"
        android:textColor="#000000"
        android:textColorHint="#FF9800"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edituser_phonenumber_input"
        app:rippleColor="#FFFFFF"
        app:strokeColor="#FFFFFF" />

    <EditText
        android:id="@+id/edituser_lname_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#FF5722"
        android:digits="abcdefghijklmnopqrstuvwxyz -ABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:ems="10"
        android:hint="Edit Last Name"
        android:inputType="textPersonName"
        android:shadowColor="@color/black"
        android:textColor="#FF9800"
        android:textColorHint="#FF9800"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edituser_fname_input" />
</androidx.constraintlayout.widget.ConstraintLayout>